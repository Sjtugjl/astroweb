---
import BaseLayout from '../layouts/BaseLayout.astro';

const skills = [
  { name: '前端开发', level: 90, color: '#3B82F6' },
  { name: '后端开发', level: 85, color: '#10B981' },
  { name: '数据库', level: 80, color: '#8B5CF6' },
  { name: '系统架构', level: 75, color: '#F59E0B' },
  { name: 'DevOps', level: 70, color: '#EF4444' },
];

const experiences = [
  {
    year: '2024',
    title: '全栈开发工程师',
    company: '科技公司',
    description: '负责企业级应用开发，带领团队完成多个重要项目'
  },
  {
    year: '2022',
    title: '高级前端开发',
    company: '互联网公司',
    description: '专注于用户体验优化，实现复杂的前端交互'
  },
  {
    year: '2020',
    title: '后端开发工程师',
    company: '创业公司',
    description: '构建高性能后端服务，设计数据库架构'
  },
];
---

<BaseLayout title="关于我 - 技术博客">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- 个人介绍部分 -->
    <section class="mb-16 text-center">
      <div class="relative inline-block">
        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-primary mx-auto mb-6">
          <img 
            src="/avatar-placeholder.png" 
            alt="头像" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="absolute -bottom-2 -right-2 bg-primary text-white px-3 py-1 rounded-full text-sm">
          <span class="animate-pulse">●</span> 在线
        </div>
      </div>
      <h1 class="text-4xl font-bold mb-4">程序员小张</h1>
      <p class="text-xl text-gray-600 mb-6">
        全栈开发工程师 / 技术博主 / 开源爱好者
      </p>
      <div class="flex justify-center space-x-4">
        <a 
          href="https://github.com/yourusername" 
          target="_blank" 
          class="text-gray-600 hover:text-primary"
          aria-label="访问我的 GitHub 主页"
          title="访问我的 GitHub 主页"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
          <span class="sr-only">访问我的 GitHub 主页</span>
        </a>
        <a 
          href="https://twitter.com/yourusername" 
          target="_blank" 
          class="text-gray-600 hover:text-primary"
          aria-label="访问我的 Twitter 主页"
          title="访问我的 Twitter 主页"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
          <span class="sr-only">访问我的 Twitter 主页</span>
        </a>
      </div>
    </section>

    <!-- 技能进度条 -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8 text-center">专业技能</h2>
      <div class="space-y-6">
        {skills.map(skill => (
          <div>
            <div class="flex justify-between mb-2">
              <span class="font-medium">{skill.name}</span>
              <span class="text-gray-600">{skill.level}%</span>
            </div>
            <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
              <div 
                class="h-full rounded-full transition-all duration-1000"
                style={`width: ${skill.level}%; background-color: ${skill.color}`}
              >
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 工作经历 -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8 text-center">工作经历</h2>
      <div class="relative border-l-2 border-gray-200 ml-3">
        {experiences.map((exp, index) => (
          <div class="mb-8 ml-6">
            <div class="flex absolute -left-3">
              <div class="w-6 h-6 bg-primary rounded-full text-white flex items-center justify-center">
                {index + 1}
              </div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <span class="text-sm text-primary font-semibold">{exp.year}</span>
              <h3 class="text-xl font-bold mt-2">{exp.title}</h3>
              <p class="text-gray-600 mb-2">{exp.company}</p>
              <p class="text-gray-700">{exp.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 联系方式 -->
    <section class="text-center">
      <h2 class="text-2xl font-bold mb-8">联系我</h2>
      <div class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-full hover:bg-opacity-90 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <a href="mailto:your.email@example.com">your.email@example.com</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* 添加渐变动画效果 */
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }

  /* 技能进度条动画 */
  .h-3 div {
    animation: slideIn 1.5s ease-out forwards;
  }

  @keyframes slideIn {
    from {
      width: 0;
    }
  }
</style> 